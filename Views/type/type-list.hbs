<h1>Mantenimiento de Tipos</h1>

{{#if hasTypes}}
<div class="row">
    {{#each typs}}
    <div class="col-12 col-sm-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tipo: {{this.name}}</h5>
            </div>
            <div class="mb-2 text-center">
                <a href="/edit-type/{{this.id}}" class="btn btn-primary float-end">Editar</a>
                <form method="post" action="/delete-type" class="form-delete">
                    <input type="hidden" value="{{this.id}}" name="TypeId" />
                    <button type="submit" class="btn btn-danger float-end me-2 delete-type">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h3 class="mt-3 text-center">No hay tipos registrados</h3>
{{/if}}

<hr />

<div class="row mt-2 mb-2">
    <div class="col-12 col-sm-4">
        <a href="/create-type" class="btn btn-success">Agregar Tipo</a>
    </div>
</div>