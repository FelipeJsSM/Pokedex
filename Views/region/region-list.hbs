<h1>Mantenimiento de Regiones</h1>

{{#if hasRegions}}
<div class="row">
  {{#each regs}}
  <div class="col-12 col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Region: {{this.name}}</h5>
      </div>
      <div class="mb-2 text-center">
        <a href="/edit-region/{{this.id}}" class="btn btn-primary float-end">Editar</a>
        <form method="post" action="/delete-region" class="form-delete">
          <input type="hidden" value="{{this.id}}" name="RegionId" />
          <button type="submit" class="btn btn-danger float-end me-2 delete-region">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h3 class="mt-3 text-center">No hay Regiones registradas</h3>
{{/if}}

<hr />

<div class="row mt-2 mb-2">
  <div class="col-12 col-sm-4">
    <a href="/create-region" class="btn btn-success">Agregar Regi√≥n</a>
  </div>
</div>
